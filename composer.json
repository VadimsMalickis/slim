{
    "name": "nbayramberdiyev/slim-4-starter",
    "type": "project",
    "description": "An opinionated starter template for a simple PHP application built on Slim Framework 4.",
    "keywords": [
        "slim",
        "slimframework",
        "slimphp",
        "skeleton",
        "template",
        "starter"
    ],
    "authors": [
        {
            "name": "N'Bayramberdiyev",
            "email": "nbayramberdiyev@pm.me"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "php-di/php-di": "^7.0",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "slim/twig-view": "^3.3",
        "symfony/translation": "^6.2",
        "symfony/twig-bridge": "^6.2",
        "vlucas/phpdotenv": "^5.5",
        "ext-mysqli": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "spatie/ignition": "^1.4",
        "symfony/var-dumper": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@php -S localhost:0 -t public"
        ],
        "test": "./vendor/bin/phpunit --testdox"
    },
    "scripts-descriptions": {
        "serve": "Starts PHP development web server on a random (unused) port.",
        "test": "Runs unit tests."
    }
}
